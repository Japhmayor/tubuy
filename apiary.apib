        [
                {
                        "uuid": "cd85bdaa7a8343a691430dffad2266a7",
                        "username": "userone",
                        "url": "https://tubuy.herokuapp.com/api/users/1/"
                },
                {
                        "uuid": "fe97e1650c424062848fdccdf3860dbc",
                        "username": "usertwo",
